<% layout("layout", { title: "Login" }) %>

<section class="auth">
  <div class="card auth__card">
    <h1>Welcome back</h1>
    <p class="muted">Login to see your notes.</p>

    <% if (error) { %>
      <div class="alert alert--danger"><%= error %></div>
    <% } %>

    <form method="POST" action="/login" class="form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <label class="label">Username</label>
      <input class="input" name="username" placeholder="nor" value="<%= form.username || '' %>" required />

      <label class="label">Password</label>
      <input class="input" name="password" type="password" required />

      <button class="btn btn--primary w100" type="submit">Login</button>
    </form>

    <p class="muted center mt16">
      New here? <a href="/register">Create account</a>
    </p>
  </div>
</section>
